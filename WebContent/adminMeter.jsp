<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>관리자 페이지</title>
<style type="text/css">
	@font-face {
		 font-family: 'NanumBarunGothic';
		 font-style: normal;
		 font-weight: 400;
		 src: url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWeb.eot');
		 src: url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWeb.eot?#iefix') format('embedded-opentype'), url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWeb.woff') format('woff'), url('//cdn.jsdelivr.net/font-nanumlight/1.0/NanumBarunGothicWeb.ttf') format('truetype');
	}
	
	.nanumbarungothic * {
		 font-family: 'NanumBarunGothic', sans-serif;
	}
	@font-face {
	    font-family: 'Cafe24Simplehae';
	    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_twelve@1.1/Cafe24Simplehae.woff') format('woff');
	    font-weight: normal;
	    font-style: normal;
	}
	@font-face {
	    font-family: 'Cafe24Dangdanghae';
	    src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_2001@1.2/Cafe24Dangdanghae.woff') format('woff');
	    font-weight: normal;
	    font-style: normal;
	}
	*{
		margin: 0 auto;
		padding: 0;
	}
	#adminmeter_main_wrap{
	}
	#adminmeter_main{
		height:2000px;
		width:1200px;
		margin: 0 auto;
		padding-left: 5px;
	}
	#adminmeter_section_wrap{
		float: left;
		width: 78%; 
	}
	#adminmeter_section{
		width: 100%;      
		height: 50px;
		background: #dddddd;
		box-shadow : 2px 2px 5px #999;
		margin: 60px 0 0 10px;
		letter-spacing: 4px;
	}
	#am_section_search-as{
		width: 100%;      
		height: 40px;   
		background: #dddddd;
		box-shadow : 2px 2px 5px #999;
		margin: 10px 0 0 10px;
		border-bottom: 3px solid orange;
	}
	
	#adminmeter_section p{ 
		padding: 15px 0 0 20px; 
		font-family: 'Cafe24Dangdanghae';
		font-size: 20px;
		
	}
	.am_section_ul li{
		float: left;
		list-style: none;
		margin-top: 7px;
		
	}
	.am_section_ul_asuv:active, .am_section_ul_asuv:link, .am_section_ul_asuv:visited{
		text-decoration: none;
		color: orange;
		font-family: 'NanumBarunGothic';
		padding: 9px 27.9px 9px 27.9px;
		
		
	}
	.am_section_ul_asuv:hover{
		color: white;
		font-family: 'NanumBarunGothic';
		text-decoration: none;
		padding: 9px 27.9px 9px 27.9px;
		background: gray;
		border-bottom: 2px gray solid;
		border-top: 1px gray solid;
		
	}
	.am_section_ul_ama{
		text-decoration: none;
		color: white;
		font-family: 'NanumBarunGothic';
		padding: 9px 27.9px 9px 27.9px;
		background: orange;
		border-bottom: 2px orange solid;
		border-top: 1px orange solid;
		
		
	}
	
	#am_section_contents_wrap{
		clear: left; 
		width: 100%;
		height: 868px;
		background: #dddddd;
		box-shadow : 2px 2px 5px #999;   
		margin: 10px 0 0 10px; 
		padding-top: 20px;
	}
	.am_sc_table{
		width: 95%;
		border-collapse: collapse;
		background: white;
	}
	.am_sc_th{
		border: 0;
		padding: 10px 0 10px 0;
		font-family: 'NanumBarunGothic';
		background: orange;
		color: white;    
		font-weight: normal;
		font-size: 13px;  
		border-right: 2px solid white;
	}
	.am_sc_td-center{
		text-align: center;
		padding: 10px 0 10px 0;
		border-bottom: 2px solid #cccccc;
	} 
	#section_search_wrap{
		float: right;
		margin: 0 30px 30px 0;
		
	}
	#ssearch_sele{
		font-family: 'Cafe24Simplehae';
		padding: 10px;
		font-size: 15px;
	}
	#ssearch_text{
		padding: 10px 10px 10px 10px;
		font-family: 'Cafe24Simplehae';
		font-size: 15px;
		
	}
	#ssearch_sub{
		color: black;
		border: 0;
		font-family: 'Cafe24Simplehae';
		font-size: 20px;
		padding: 10px;
		background: orange;
		
	}
</style>
</head>
<body>
	<%@ include file="header.jsp"%>
	<main id="adminmeter_main_wrap">
		<section id="adminmeter_main">
			<%@include file="adminmenu.jsp" %>
			<section id="adminmeter_section_wrap">
				<div id="adminmeter_section">
					<p>재료관리</p>
				</div>
					<div id="am_section_search-as">
						<ul class="am_section_ul">
							<li><a href="#" class="am_section_ul_asuv">전체</a></li>
							<li><a href="#" class="am_section_ul_ama">정육</a></li>
							<li><a href="#" class="am_section_ul_asuv">수산/해산</a></li>
							<li><a href="#" class="am_section_ul_asuv">면/견과</a></li>
							<li><a href="#" class="am_section_ul_asuv">과일</a></li>
							<li><a href="#" class="am_section_ul_asuv">채소</a></li>
							<li><a href="#" class="am_section_ul_asuv">베이커리</a></li>
							<li><a href="#" class="am_section_ul_asuv">양념/오일</a></li>
							<li><a href="#" class="am_section_ul_asuv">계란/유제품</a></li>
						</ul>
					</div>
					<div id="am_section_contents_wrap">
						<div id="section_search_wrap">
							<select id="ssearch_sele">
								<option>제품명</option>
								<option>날짜</option>
								<option>상태</option>
							</select>
							<input type="text" id="ssearch_text" placeholder="검색어를 입력하세요">
							<input type="submit" id="ssearch_sub" value="검색">
						</div>
						<table class="am_sc_table">
							<thead>
								<tr>
									<th class="am_sc_th">상품코드</th>
									<th class="am_sc_th" colspan="2">상품명</th>
									<th class="am_sc_th">등록마감일</th>
									<th class="am_sc_th">가격<span style="font-weight: normal;font-size: 10px;">(100g)</span></th>
									<th class="am_sc_th">현재고</th>
									<th class="am_sc_th">수정재고</th>
									<th class="am_sc_th">상태</th>
									<th class="am_sc_th">비고</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td  class="am_sc_td-center">1</td>
									<td class="am_sc_td-center"><img src="img/chop_beef.jpg" style="width: 50px; height: 60px; "></td>
									<td class="am_sc_td-center">[냉장]소고기 다짐육(한우)</td>
									<td class="am_sc_td-center">2021-06-19</td>
									<td class="am_sc_td-center">2,000원</td>
									<td class="am_sc_td-center">3</td>
									<td class="am_sc_td-center"><input value="3" style="width: 15px;"> </td>
									<td class="am_sc_td-center"><input type="radio" >판매<br><input type="radio" >품절 </td>
									<td class="am_sc_td-center"><input type="button" value="수정"><br><input type="button" value="삭제"></td>
								</tr>
								<tr>
									<td  class="am_sc_td-center">2</td>
									<td class="am_sc_td-center"><img src="img/chop_beef.jpg" style="width: 50px; height: 60px; "></td>
									<td class="am_sc_td-center">[냉장]소고기 다짐육(한우)</td>
									<td class="am_sc_td-center">2021-06-19</td>
									<td class="am_sc_td-center">2,000원</td>
									<td class="am_sc_td-center">3</td>
									<td class="am_sc_td-center"><input value="3" style="width: 15px;"> </td>
									<td class="am_sc_td-center"><input type="radio" >판매<br><input type="radio" >품절 </td>
									<td class="am_sc_td-center"><input type="button" value="수정"><br><input type="button" value="삭제"></td>
								</tr>
							</tbody>
						</table>
					</div>	
				
			</section>
		</section>
	</main>
	<footer>
	<%@ include file="footer.jsp"%>
	</footer>
</body>
</html>